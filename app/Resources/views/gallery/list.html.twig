{% extends 'base.html.twig' %}

{% block body %}
    <section class="ui basic segment">
        <h1>Les galeries</h1>

        <a href="/add/gallery" class="ui primary button">Ajouter une galerie</a>

        <!-- Galleries -->
        <table class="ui celled striped table">
            <thead>
            <tr>
                <th class="collapsing">Preview</th>
                <th>Nom</th>
                <th class="collapsing center aligned">Actions</th>
            </tr>
            </thead>
            <tbody>
            {% for gallery in galleries %}
                <tr>
                    <td><img class="ui small image" src="{{ gallery.items.0.media.thumbnail }}" alt=""></td>
                    <td>{{ gallery.title }} - <em>{{ gallery.itemsNbre }} élément(s)</em></td>
                    <td class="collapsing">
                        <a href="/edit/gallery/{{ gallery.id }}" class="ui green icon button"><i class="ui edit icon"></i></a>
                        <a href="/delete/gallery/{{ gallery.id }}" class="ui red icon button"><i class="ui trash icon"></i></a>
                    </td>
                </tr>
            {% endfor %}
            </tbody>
        </table>
    </section>
{% endblock %}

{% block stylesheets %}
{% endblock %}
