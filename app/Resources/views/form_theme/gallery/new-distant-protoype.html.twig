{% macro newItemCollection(distantForm) %}
    <section id="new-distant-dimmer" class="ui left aligned segment">
        <!-- Title -->
        <h3 class="ui header">Uploader une vid√©o</h3>

        <!-- Errors -->
        <p class="form-errors"></p>

        <div class="ui form">
            <!-- Upload form -->
            <div class="field">
                {{ form_label(distantForm.name) }}
                <input type="text" id="distant_name" name="distant[name]" required="required">
            </div>
            <div class="field">
                {{ form_label(distantForm.url) }}
                <input type="text" id="distant_url" name="distant[url]" required="required">
            </div>
            <div>
                <button
                        type="submit"
                        id="distant_Ajouter"
                        class="ui fluid green submit button"
                        name="distant[Ajouter]">Uploader
                </button>
            </div>
            <input type="hidden" id="distant__token" name="distant[_token]" value="{{ distantForm._token.vars.value }}">
        </div>

        <!-- Loader -->
        <div class="ui dimmer">
            <div class="ui text loader">Upload en cours</div>
        </div>

        <!-- Form block for tableRowAppend -->
        {% include 'form_theme/gallery/new-item.html.twig' %}
    </section>
{% endmacro %}